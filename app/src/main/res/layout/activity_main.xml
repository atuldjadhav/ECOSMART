<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="project.ecosmart.MainActivity"
    android:background="#d6d7d7">

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/AboutButton"
        android:onClick="OnAboutClick"
        android:src="@drawable/about"
        android:layout_marginTop="68dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/InteractButton"
        android:src="@drawable/interact"
        android:layout_alignTop="@+id/AboutButton"
        android:layout_centerHorizontal="true"
        android:onClick="OnInteractClick" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/CameraButton"
        android:src="@drawable/camera"
        android:layout_alignTop="@+id/InteractButton"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:onClick="OnCameraClick" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/MapButton"
        android:src="@drawable/maps"
        android:onClick="OnMapClick"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ShareButton"
        android:onClick="OnShareClick"
        android:src="@drawable/share"
        android:layout_alignTop="@+id/MapButton"
        android:layout_alignLeft="@+id/InteractButton"
        android:layout_alignStart="@+id/InteractButton" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/CommentButton"
        android:src="@drawable/comment"
        android:layout_alignTop="@+id/ShareButton"
        android:layout_alignLeft="@+id/CameraButton"
        android:layout_alignStart="@+id/CameraButton"
        android:onClick="OnCommentClick" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="About"
        android:id="@+id/textView"
        android:layout_below="@+id/AboutButton"
        android:layout_alignRight="@+id/AboutButton"
        android:layout_alignEnd="@+id/AboutButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textAlignment="center"
        android:textColor="#000000" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Interact"
        android:id="@+id/textView2"
        android:textAlignment="center"
        android:textColor="#000000"
        android:layout_alignBottom="@+id/textView"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Camera"
        android:id="@+id/textView3"
        android:textAlignment="center"
        android:textColor="#000000"
        android:layout_alignTop="@+id/textView2"
        android:layout_alignLeft="@+id/CameraButton"
        android:layout_alignStart="@+id/CameraButton" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Nearby"
        android:id="@+id/textView4"
        android:textAlignment="center"
        android:textColor="#000000"
        android:layout_below="@+id/MapButton"
        android:layout_alignRight="@+id/MapButton"
        android:layout_alignEnd="@+id/MapButton" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Share"
        android:id="@+id/textView5"
        android:textAlignment="center"
        android:textColor="#000000"
        android:layout_below="@+id/ShareButton"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="FeedBack"
        android:id="@+id/textView6"
        android:textAlignment="center"
        android:textColor="#000000"
        android:layout_alignTop="@+id/textView5"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Log In"
        android:id="@+id/logbutton"
        android:background="@android:color/holo_green_light"
        android:onClick="OnLogClick"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:src="@drawable/qrcode"
        android:layout_above="@+id/textView7"
        android:layout_alignLeft="@+id/textView2"
        android:layout_alignStart="@+id/textView2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Scan QR Code to visit the Website"
        android:id="@+id/textView7"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:textColor="#000000" />

</RelativeLayout>
